# Arcade API Key (required for email extraction)
ARCADE_API_KEY=your_arcade_api_key_here
ARCADE_USER_ID=your_email@example.com

# OpenAI API Key (required for AI task parsing)
OPENAI_API_KEY=your_openai_api_key_here

# Local SQLite Database Configuration (optional)
# Default: tasks.db in project root directory
# DATABASE_PATH=tasks.db

# Notion Integration (optional)
# Get the database ID from your Notion database URL
# Example: https://notion.so/username/database-name-abc123def456
# The database ID is the last part: abc123def456
NOTION_DATABASE_ID=your-notion-database-id-here

# Dashboard Configuration (optional)
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=5000
