# Arcade API Key
ARCADE_API_KEY=your_arcade_api_key_here
ARCADE_USER_ID=your_email@example.com

# LLM Provider Configuration
# Choose your LLM provider: 'openai' (default) or 'deepseek'
LLM_PROVIDER=openai

# OpenAI API Key (required if LLM_PROVIDER is 'openai')
# Used for chat completions and embeddings
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek API Key (required if LLM_PROVIDER is 'deepseek')
# Get from https://platform.deepseek.com/
# DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Turso Database Configuration for SQLAlchemy
# For Turso cloud database:
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token-here

# For local SQLite database (no auth token needed):
# TURSO_DATABASE_URL=local.db
# TURSO_AUTH_TOKEN=

# Choose database implementation
USE_SQLALCHEMY=true  # Set to true to use SQLAlchemy, false for simple SQLite

# Notion Integration (optional)
# Get the database ID from your Notion database URL
# Example: https://notion.so/username/database-name-abc123def456
# The database ID is the last part: abc123def456
NOTION_DATABASE_ID=your-notion-database-id-here

# Dashboard Configuration (optional)
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=5000

# Other API keys and configurations
# Add any other keys your agent needs here
